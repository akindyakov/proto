# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
# Path to file with arbitrary Python code to be loaded
pythonfile = ~/.offlineimap.py

[general]
accounts = magictwin,gmail

[Account magictwin]
localrepository = magictwin_local
remoterepository = magictwin_remote

[Repository magictwin_local]
type = Maildir
localfolders = ~/mail/magictwin@yandex.ru

[Repository magictwin_remote]
type = IMAP
ssl = yes
remotehost = imap.yandex.ru
remoteport = 993
remoteuser = magictwin@yandex.ru
remotepasseval = get_pass("yandex.ru/magictwin@yandex.ru")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2

[Account gmail]
localrepository = gmail_local
remoterepository = gmail_remote

[Repository gmail_local]
type = Maildir
localfolders = ~/mail/gmail

[Repository gmail_remote]
type = IMAP
ssl = yes
remotehost = imap.gmail.com
remoteport = 993
remoteuser = akindyakov@gmail.com
remotepasseval = get_pass("google.com/akindyakov@gmail.com")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 2
